## Receive options.
set imap_user=dkellino@gmail.com
set folder = imaps://dkellino@imap.gmail.com/
set spoolfile = +INBOX
set postponed = +Drafts
set record = +Sent
unset record

## Send options.
set smtp_url=smtps://dkellino@smtp.gmail.com
set realname='David Kelly'
set from=dkellino@gmail.com
set hostname="gmail.com"
set signature="David Kelly"
# Connection options

## Hook -- IMPORTANT!
account-hook $folder "set imap_user=dkellino@gmail.com imap_pass=$my_imap_pass"
